<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple android:color="@color/settings_githubBtn_ripple">

            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/settings_githubBtn_ripple" />
                </shape>
            </item>

            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/settings_githubBtn_border"
                        android:width="@dimen/settings_githubBtn_border" />
                    <corners android:radius="@dimen/settings_githubBtn_radius" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>