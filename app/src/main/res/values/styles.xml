<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FragmentTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">@dimen/fragment_title_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/fragment_title_paddingVertical</item>
        <item name="android:textSize">@dimen/fragment_title_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsOptionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/settings_optionTitle_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/settings_optionTitle_marginLeft</item>
        <item name="android:textSize">@dimen/settings_optionTitle_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WorkTimeNumberPicker">
        <item name="android:height">@dimen/settings_numberPicker_height</item>
        <item name="android:textSize">@dimen/settings_workTime_textSize</item>
    </style>
</resources>