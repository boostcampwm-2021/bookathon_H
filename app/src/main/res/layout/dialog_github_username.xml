<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/githubDialog_marginHorizontal"
        android:layout_marginRight="@dimen/githubDialog_marginHorizontal"
        android:layout_marginTop="@dimen/githubDialog_marginVertical"
        android:layout_marginBottom="@dimen/githubDialog_marginVertical"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/username"/>
</androidx.constraintlayout.widget.ConstraintLayout>